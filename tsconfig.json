{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": ["src"]
}
